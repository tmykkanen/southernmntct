---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import HeroTextCenter from '../components/HeroTextCenter.astro';
import HeroTextLeft from '../components/HeroTextLeft.astro';
---

<Layout>
  <Navigation />

  <HeroTextLeft id='plan'>
    <h2 slot='headingText'>Our Plan</h2>
    <div slot='bodyText'>
      <p>
        We aim to accomplish our 100 year vision by raising up and equipping
        pastors/elders to lead churches in gospel imaginary through:
      </p>
      <ul class='max-w-xs flex flex-col'>
        <li
          class='inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-white border border-gray-200 text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-white'
        >
          Monthly Pastoral Fellowship
        </li>
        <li
          class='inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-white border border-gray-200 text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-white'
        >
          Summer Pastoral Internships
        </li>
        <li
          class='inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-white border border-gray-200 text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-white'
        >
          Pastoral Residencies
        </li>
        <li
          class='inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-white border border-gray-200 text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-white'
        >
          Periodic Training Events
        </li>
      </ul>
    </div>
  </HeroTextLeft>
</Layout>
