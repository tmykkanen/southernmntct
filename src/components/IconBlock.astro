---
interface Props {
  iconName: string;
  titlePre: string;
  title: string;
  description: string;
  link?: string;
}

import { Icon } from 'astro-icon/components';
const { iconName, titlePre, title, description, link } = Astro.props as Props;
---

<div class='flex gap-x-5 sm:gap-x-8'>
  <!-- Icon -->
  <Icon name={iconName} class='shrink-0 size-10 text-accent' />
  <div class='grow'>
    <h3 class='sm:text-lg font-semibold'>
      <span class=''>{titlePre}</span>
      {title}
    </h3>
    <p class='mt-1'>{description}</p>
    {
      link && (
        <a
          href={link}
          class=' border-b-2 border-accent hover:bg-accent hover:text-primary hover:rounded-sm hover:border-2'
        >
          Learn More
        </a>
      )
    }
  </div>
</div>
