---
interface Props {
  img: string;
}

const { img } = Astro.props;
---

<div class=`hero min-h-screen bg-[url(${img})]`>
  <div class='hero-overlay bg-opacity-60'></div>
  <div
    class='hero-content text-primary text-center prose
    prose-h1:font-bold prose-h1:text-5xl prose-h1:mb-5 prose-headings:text-primary
    prose-p:text-2xl prose-p:mb-5
    prose-a:no-underline prose-a:font-bold prose-a:border-b-4 prose-a:border-b-accent prose-a:text-primary
    hover:prose-a:bg-accent hover:prose-a:rounded-lg'
    x-data
    x-intersect:enter='$el.classList.add("fadeInUp")'
    x-intersect:leave='$el.classList.remove("fadeInUp")'
  >
    <slot name='heading' />
    <slot name='subheading' />
  </div>
</div>
