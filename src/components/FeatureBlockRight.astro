---
interface Props {
  id: string;
  data: Object[];
}

import IconBlock from './IconBlock.astro';

const { data, id } = Astro.props;

// TODO: Make accordion for small screens?
---

<div class='hero bg-secondary min-h-screen' id={id}>
  <div class='grid md:grid-cols-2 gap-12 mt-24'>
    <!-- HEADING -->
    <div
      class='hero-content text-center prose
    prose-h2:text-5xl prose-h2:font-bold'
    >
      <h2 class='text-3xl font-bold lg:text-5xl max-w-[16ch] md:max-w-[65ch]'>
        <slot name='heading' />
      </h2>
      <p class='mt-3 text-2xl'></p>
    </div>
    <!-- END HEADING -->

    <!-- ICON BLOCK -->
    <div
      class='my-auto mx-auto mb-10 space-y-6 lg:space-y-10 max-w-[357px] md:max-w-[516px]'
    >
      {
        data.map((item: any) => (
          <IconBlock
            titlePre={item.titlePre}
            title={item.title}
            description={item.description}
            iconName={item.icon}
            link={item.link}
          />
        ))
      }
    </div>
    <!-- END ICON BLOCK -->
  </div>
</div>
