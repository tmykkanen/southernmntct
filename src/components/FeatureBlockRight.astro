---
interface Props {
  id: string;
  data: Object[];
}

import IconBlock from './IconBlock.astro';

const { data, id } = Astro.props;

// TODO: Make accordion for small screens?
---

<div
  class='min-h-screen hero px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto bg-secondary'
  id={id}
>
  <div class='grid md:grid-cols-2 gap-12'>
    <!-- HEADING -->
    <div class=''>
      <h2 class='text-3xl text-base-100 font-bold lg:text-5xl'>
        <slot name='heading' />
      </h2>
      <p class='mt-3 text-base-300 text-2xl'></p>
    </div>
    <!-- END HEADING -->

    <!-- ICON BLOCK -->
    <div class='space-y-6 lg:space-y-10'>
      {
        data.map((item: any) => (
          <IconBlock
            titlePre={item.titlePre}
            title={item.title}
            description={item.description}
            iconName={item.icon}
          />
        ))
      }
    </div>
    <!-- END ICON BLOCK -->
  </div>
</div>
